<tal:block define="tups view/getCombinedWidgets;
                   niceTitles view/getNiceTitles;
									 error python:tups[0][0].error;" >
<!--
	tups indexes
	0 - checkbox widget
	1 - title
	2 - description
	
	I don't not iterate over the widgets because we want to control the way they are displayed....
	May not be the best way to do it....
	-->
 	<li class="dexterity-field" tal:define="error python:tups[0][0].error;">
		<table>
			<tr>
				<td style="width:70%">
					<span class="error" tal:omit-tag="not:error">
						<div tal:condition="error" tal:replace="structure error/render" />
						<input class="field-type-checkbox" type="text" tal:replace="structure python: tups[0][0].render()" />
					</span>
					<a href=""
						class="dexterity-field-options-link"
	       		tal:define="link python:view.context.context.link(view.getContent(), tups[1][0].field.__name__)"
	       		tal:attributes="href link">
						<b tal:content="python: tups[1][0].value"></b>
					</a>
				</td>

				<td class="field-mover" style="width:15%; text-align:right">
					<a class="move-field-up" tal:attributes="href python: '/move/up/' + tups[1][0].value" >up</a> | 
					<a class="move-field-down" tal:attributes="href python: '/move/down/' + tups[1][0].value">down</a>
				</td>
				<td style="width:15%; text-align:right">
					<a class="delete-field" onclick="return false;" tal:attributes="href python: '/delete/' + tups[1][0].value" >delete</a>
				</td>
			</tr>
			</table>
  </li>
</tal:block>
